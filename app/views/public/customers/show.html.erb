<div class="customer-container">
  <!-- 登録情報セクション -->
  <div class="section-header">
    <h2>登録情報</h2>
    <%= link_to '編集する', customers_information_edit_path, class: "btn-edit" %>
  </div>

  <div class="info">
    <p><strong>氏名:</strong> <%= current_customer.last_name %> <%= current_customer.first_name %></p>
    <p><strong>カナ:</strong> <%= current_customer.last_name_kana %> <%= current_customer.first_name_kana %></p>
    <p><strong>郵便番号:</strong> <%= current_customer.postal_code %></p>
    <p><strong>住所:</strong> <%= current_customer.address %></p>
    <p><strong>電話番号:</strong> <%= current_customer.telephone_number %></p>
    <p><strong>メールアドレス:</strong> <%= current_customer.email %></p>
  </div>

  <% @children.each do |child| %>
    <!-- 子供情報セクション -->
    <div class="child-section">
      <div class="section-header">
        <h2>お子さん情報</h2>
        <%= link_to '編集する', edit_child_path(child), class: "btn-edit" %>
      </div>

      <div class="info">
        <p><strong>氏名:</strong> <%= child.last_name %> <%= child.first_name %></p>
        <p><strong>カナ:</strong> <%= child.last_name_kana %> <%= child.first_name_kana %></p>
        <p><strong>クラス:</strong> <%= child.level %></p>
        <p><strong>契約時間:</strong> <%= child.contact_time %></p>
        <p><strong>契約曜日:</strong> <%= child.contact_dey %></p>
        <p>
          <strong>お休み:</strong>
          <%= Off.where(child_id: child.id, flag: 0).count %>日
          <%= link_to 'お休みを確認', show_absences_off_path(id: child.id), class: "btn-confirm" %>
        </p>
      </div>
    </div>
  <% end %>

  <!-- お子さん登録ボタン -->
  <div class="actions">
    <%= link_to 'お子さん登録', new_child_path, class: "btn-register" %>
  </div>


  <!-- 他の操作ボタン -->
  <div class="actions">
    <%= link_to 'お休み登録', offs_path, class: "btn-holiday" %>
    <%= link_to '振替日登録', date_index_path, class: "btn-transfer" %>
    <%= link_to '振替履歴', dates_confirmation_path, class: "btn-history" %>
  </div>
</div>
