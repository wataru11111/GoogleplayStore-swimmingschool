<div class="container">
  <h2>会員登録</h2>

  <%= form_with model: @child, url: child_index_path, local: true do |f| %>
    <div class="field">
      <%= f.label :姓 %><br />
      <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    </div>

    <div class="field">
      <%= f.label :名 %><br />
      <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name" %>
    </div>

    <div class="field">
      <%= f.label :姓カナ %><br />
      <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana" %>
    </div>

    <div class="field">
      <%= f.label :名カナ %><br />
      <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana" %>
    </div>

    <div class="field">
     <%= f.label :契約回数 %><br />
     <%= select_tag 'contract_count', options_for_select(['週1回', '週2回']), id: 'contract_count' %>
    </div>

    <div class="field">
     <%= f.label :契約曜日1 %><br />
     <%= f.select :contact_dey1,
                  [["水曜日", "水曜日"], ["木曜日", "木曜日"], ["土曜日", "土曜日"], ["日曜日", "日曜日"]],
                  include_blank: "曜日選択" %>
    </div>

    <div class="field">
     <%= f.label :契約時間1 %><br />
     <%= f.select :contact_time1, [], include_blank: "時間選択", id: "child_contact_time1" %>
    </div>

    <div class="field" id="contact-dey2-field" style="display:none;">
      <%= f.label :契約曜日2 %><br />
      <%= f.select :contact_dey2,
                   [["水曜日", "水曜日"], ["木曜日", "木曜日"], ["土曜日", "土曜日"], ["日曜日", "日曜日"]],
                   include_blank: "曜日選択" %>
    </div>

    <div class="field" id="contact-time2-field" style="display:none;">
      <%= f.label :契約時間2 %><br />
      <%= f.select :contact_time2, [], include_blank: "時間選択", id: "child_contact_time2" %>
    </div>


    <div class="field">
      <%= f.label :クラス %><br />
      <%= f.select :level, 
                   [["カニ", "カニ"], ["ラッコ", "ラッコ"], ["イルカ", "イルカ"], ["黄星1", "黄星1"], ["黄星2", "黄星2"], ["黄星3", "黄星3"], ["黄星4", "黄星4"], ["青星1", "青星1"], ["青星2", "青星2"], ["青星3", "青星3"], ["青星4", "青星4"], ["赤星1", "赤星1"], ["赤星2", "赤星2"], ["赤星3", "赤星3"], ["赤星4", "赤星4"], ["ピンク星1", "ピンク星1"], ["ピンク星2", "ピンク星2"], ["ピンク星3", "ピンク星3"], ["ピンク星4", "ピンク星4"],["AS", "AS"]], 
                   include_blank: "クラス選択" %>
    </div>

    <div class="field">
      <%= f.label :電話番号（ハイフンなし） %><br />
      <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %>
      <p>※ない場合は保護者の方の電話番号をご入力ください。</P>
    </div>

    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>
  <% end %>
</div>


<%= link_to '戻る', customers_show_path %>
