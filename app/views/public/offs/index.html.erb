<div class="calendar-photo-container">
   <h2>4月5月スケジュール表</h2>
<%= image_tag 'april_may_schedule.png', class: 'calendar-photo', alt: '4月5月スケジュール' %>
</div>

<div class="calendar-photo-container">
  <h2>6月7月スケジュール表</h2>
  <%= image_tag '2025_june_july_schedule_1.png', class: 'calendar-photo', alt: '6月7月スケジュール' %>
</div>


<div class="container">
  <!-- フラッシュメッセージの表示 -->
  <% if flash[:alert].present? %>
    <div class="alert alert-danger">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <% if @off&.errors&.any? %>
    <div class="error-messages">
      <h2>登録に失敗しました</h2>
      <ul>
        <% @off.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @offs, url: offs_path, method: :post do |f| %>

    <!-- お子さんの姓（last_name）の入力フィールド -->
    <div class="field">
      <%= f.label :姓 %><br />
      <%= f.text_field :child_last_name %>
    </div>

    <!-- お子さんの名（first_name）の入力フィールド -->
    <div class="field">
      <%= f.label :名 %><br />
      <%= f.text_field :child_first_name %>
    </div>
    
    <!-- 日付選択フィールド（カレンダー形式＋明日以降） -->
    <div class="field">
      <%= f.label :お休み日付 %><br />
      <%= f.date_field :off_month, id: "off_month", min: Date.tomorrow, max: Setting.find_by(key: 'available_off_day')&.value %>
    </div>

    <div class="row">
      <div class="actions"><br>
        <%= f.submit "保存" %>
      </div>
    </div>

  <% end %>
</div>
