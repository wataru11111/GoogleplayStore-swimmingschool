<h2>お休み登録</h2>

<%= form_with model: @off, url: admin_offs_path, local: true do |f| %>
  <%= f.hidden_field :child_id, value: @child.id %>

  <div class="form-group">
    <%= f.label :off_month, "お休み日" %>
    <%= f.date_field :off_month, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :reason, "理由（任意）" %>
    <%= f.text_field :reason, class: "form-control" %>
  </div>

  <%= f.hidden_field :flag, value: 0 %>

  <%= f.submit "登録", class: "btn btn-primary mt-2" %>
<% end %>
