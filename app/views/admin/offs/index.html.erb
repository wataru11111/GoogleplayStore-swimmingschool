<div class="container">

  <h1>お休み一覧</h1>

  <!-- 検索フォーム -->
  <%= form_with url: admin_offs_path, method: :get, local: true do %>
    <div class="form-group">
      <%= label_tag :search_date, "日付を選択" %>
      <%= date_field_tag :search_date, params[:search_date], class: "form-control" %>
    </div>
    <%= submit_tag "検索", class: "btn btn-primary" %>
  <% end %>

  <!-- 検索結果 -->
  <% if params[:search_date].present? %>
    <h3><%= params[:search_date] %> のお休み人数: <%= @offs.size %></h3>
  <% end %>

  <table class="table">
    <thead>
      <tr>
        <th>お休み日</th>
        <th>氏名</th>
        <th>契約曜日</th>
        <th>契約時間</th>
        <th>クラス</th>
      </tr>
    </thead>
    <tbody>
      <% @offs.each do |off| %>
        <tr>
          <td><%= off.off_month %></td>
          <td><%= off.child.last_name %> <%= off.child.first_name %></td>
          <td><%= off.child.contact_time %></td>
          <td><%= off.child.contact_dey %></td>
          <td><%= off.child.level %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
