<div class="container">
  <h1>会員一覧</h1>

  <!-- ジャンプリンク -->
 <div class="alphabet-links mb-3">
   <% ["あ行", "か行", "さ行", "た行", "な行", "は行", "ま行", "や行", "ら行", "わ行"].each_with_index do |group, index| %>
     <button class="btn btn-secondary btn-sm me-1 mb-1 jump-link" data-target="section-<%= index %>"><%= group %></button>
   <% end %>
 </div>


  <!-- 会員テーブル -->
  <table class="table">
    <thead>
      <tr>
        <th>会員ID</th>
        <th>氏名</th>
        <th>メールアドレス</th>
        <th>電話番号</th>
        <th>ステータス</th>
      </tr>
    </thead>

    <% current_group = nil %>
    <tbody>
      <% @customers.each do |customer| %>
        <% first_char = customer.last_name_kana[0] %>
        <% new_group = case first_char
          when /^[あ-お]/ then "あ行"
          when /^[か-こ]/ then "か行"
          when /^[さ-そ]/ then "さ行"
          when /^[た-と]/ then "た行"
          when /^[な-の]/ then "な行"
          when /^[は-ほ]/ then "は行"
          when /^[ま-も]/ then "ま行"
          when /^[や-よ]/ then "や行"
          when /^[ら-ろ]/ then "ら行"
          when /^[わ-ん]/ then "わ行"
          else nil
        end %>

        <% if current_group != new_group %>
          <% current_group = new_group %>
          <!-- グループ見出し -->
          <tr>
            <td colspan="5">
              <h4 id="section-<%= ["あ行", "か行", "さ行", "た行", "な行", "は行", "ま行", "や行", "ら行", "わ行"].index(current_group) %>" class="mt-4 border-bottom pt-3 pb-1">
                🔹 <%= current_group %>
              </h4>
            </td>
          </tr>
        <% end %>

        <!-- 会員情報 -->
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to admin_customer_path(customer.id) do %>
            <%= customer.last_name %> <%= customer.first_name %>
          <% end %></td>
          <td><%= customer.email %></td>
          <td><%= customer.telephone_number %></td>
          <td>
            <% case customer.status %>
            <% when "active" %>
              <h4 class="text-success">有効</h4>
            <% when "suspended" %>
              <h4 class="text-warning">休会中</h4>
            <% when "inactive" %>
              <h4 class="text-danger">無効</h4>
            <% end %>
          </td>
        </tr>

        <!-- お子さんの情報 -->
        <tr>
          <td colspan="5">
            <strong>お子さんの名前:</strong>
            <% if customer.children.present? %>
              <ul>
                <% customer.children.each do |child| %>
                  <li><%= child.last_name %> <%= child.first_name %></li>
                <% end %>
              </ul>
            <% else %>
              <span>登録されているお子さんはいません。</span>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

